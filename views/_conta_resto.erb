<% conta = atual.financeiro.contas[:resto] %>
<% if anterior %>
  <% conta_anterior = anterior.financeiro.contas[:resto] %>
  <% diff = conta.valor - conta_anterior.valor %>
<% else %>
  <% diff = conta.valor %>
<% end %>
<ul class="conta <%= class_lucro(diff) %>">
	<li class="nome"><%= :resto %></li>
	<li class="valor"><%= dinheiro conta.valor %></li>
  <% if diff < 0 %>
    <li class="debito"><%= dinheiro diff.abs %></li>
  <% else %>
	  <li class="credito"><%= dinheiro diff %></li>
  <% end %>
</ul>
